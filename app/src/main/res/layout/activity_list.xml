<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ActivityList">

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="260dp"
        android:backgroundTint="#2196F3"
        android:backgroundTintMode="add"
        android:fontFamily="sans-serif-black"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:icon="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAtras" />


    <ListView
        android:id="@+id/listaContactos"
        android:layout_width="0dp"
        android:layout_height="425dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:background="@color/white"
        android:cacheColorHint="@color/white"
        android:orientation="vertical"
        android:scrollbarStyle="insideInset"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"></ListView>

    <Button
        android:id="@+id/btnCompartir"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="sans-serif-black"
        android:text="Compartir"
        app:icon="@android:drawable/ic_menu_share"
        app:iconSize="20dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/btnVerImagen"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaContactos" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="sans-serif-black"
        android:text="Eliminar"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconSize="24dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toEndOf="@+id/btnActualizar"
        app:layout_constraintTop_toBottomOf="@+id/btnVerImagen" />

    <Button
        android:id="@+id/btnVerImagen"
        android:layout_width="161dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="sans-serif-black"
        android:text="Ver Imagen"
        app:icon="@android:drawable/ic_menu_view"
        app:iconSize="24dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toEndOf="@+id/btnCompartir"
        app:layout_constraintTop_toBottomOf="@+id/listaContactos" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="sans-serif-black"
        android:text="Actualizar"
        app:icon="@android:drawable/ic_popup_sync"
        app:iconSize="20dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCompartir" />

</androidx.constraintlayout.widget.ConstraintLayout>